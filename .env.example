# Server Configuration
PORT=3000
IMAGES_DIR=./media

# Database Configuration
DB_PATH=./gallery.db

# Security - IMPORTANT: Change this value!
# Generate a strong session secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-secret-key-here-change-this

# Session Configuration (24 hours in milliseconds)
SESSION_MAX_AGE=86400000

# Set to 'true' if using HTTPS (recommended for production)
USE_SECURE_COOKIES=false

# IMPORTANT: Multi-user authentication is now enabled by default
# Run 'node setup-admin.js' to create your first admin user
# The old PASSWORD_HASH method is no longer supported
